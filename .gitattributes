* text=auto eol=lf

# Common text formats
*.md     text eol=lf
*.py     text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.js     text eol=lf
*.jsx    text eol=lf
*.json   text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.sh     text eol=lf

# Binary assets
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.webp   binary
*.ico    binary
*.pdf    binary

# Lock files should be treated as text for sane diffs
pnpm-lock.yaml text eol=lf
package-lock.json text eol=lf
yarn.lock text eol=lf
