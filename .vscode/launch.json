{
  // VS Code Debug: FastAPI + Next.js 개발 편의를 위한 구성
  // 한국어 주석: 로컬 개발에서 바로 실행/디버깅 가능하도록 설정합니다.
  "version": "0.2.0",
  "configurations": [
  
    {
      "name": "API: FastAPI (Postgres local)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "apps.api.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "3001",
        "--reload"
      ],
      "env": {
        "DATABASE_URL": "postgresql+psycopg://app:devpass@localhost:5433/appdb"
      },
      "preLaunchTask": "DB: Up",
      "postDebugTask": "DB: Down",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "API: FastAPI (Postgres via Docker)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "apps.api.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "3001",
        "--reload"
      ],
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "DB: Up",
      "postDebugTask": "DB: Down",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Web: Next.js dev (pnpm)",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/web/node_modules/next/dist/bin/next",
      "args": ["dev", "-p", "3000"],
      "cwd": "${workspaceFolder}/apps/web",
      "env": {
        "NEXT_PUBLIC_WEB_API_BASE": "http://localhost:3001"
      },
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    {
      // 웹은 로컬, DB(Postgres dev/test)+API는 컨테이너(dev-api-up/down)로 자동 기동/정리
      "name": "Web: Next.js dev (API containers auto)",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/web/node_modules/next/dist/bin/next",
      "args": ["dev", "-p", "3000"],
      "cwd": "${workspaceFolder}/apps/web",
      "env": {
        "NEXT_PUBLIC_WEB_API_BASE": "http://localhost:3001"
      },
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "preLaunchTask": "Dev: DB+API(containers) up",
      "postDebugTask": "Dev: DB+API(containers) down"
    },
    {
      "name": "Tests: Pytest (PG test DB)",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-q"],
      "env": {
        "TEST_DB": "pg",
        "TEST_DB_URL": "postgresql+psycopg://app:devpass@localhost:5434/appdb_test"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ],
  "compounds": [
    {
      "name": "Dev: API(Postgres local) + Web",
      "configurations": ["API: FastAPI (Postgres local)", "Web: Next.js dev (pnpm)"]
    },
    {
      "name": "Dev: API(Postgres) + Web",
      "configurations": ["API: FastAPI (Postgres via Docker)", "Web: Next.js dev (pnpm)"]
    }
  ]
}
